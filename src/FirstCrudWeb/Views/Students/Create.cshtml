@{
    ViewData["Title"] = "Create";
}

@model Student


<h1>Add new student</h1>

<form class="" asp-action="Create">
    <div class="form-group mb-2">
        <label asp-for="FirstName">First name</label>
        <input class="form-control" asp-for="FirstName" placeholder="Ex: Jose, Juan">
    </div>

    <div class="form-group mb-2">
        <label asp-for="LastName">Last name</label>
        <input class="form-control" asp-for="LastName" placeholder="Ex: Rodriguez, Ortiz">
    </div>

    <div class="form-group mb-2">
        <label asp-for="Email">Email</label>
        <input class="form-control" asp-for="Email" placeholder="Ex: example@example.com">
    </div>

    <div class="form-group mb-2">
        <label asp-for="Adress">Adress</label>
        <input class="form-control" asp-for="Adress" placeholder="Ex: Calle 13">
    </div>

    <div class="form-group mb-2">
        <label asp-for="Phone">Phone</label>
        <input class="form-control" asp-for="Phone" placeholder="Ex: 11111111111">
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>